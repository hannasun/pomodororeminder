<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.hannasun.pomodororeminder.widgets.CountDownView
        android:id="@+id/tomato_clock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"/>


    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:id="@+id/working_status"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/tomato_clock"
        android:textSize="20dp"
        android:textColor="@android:color/holo_red_light"
        android:text="working"/>

    <ImageButton
       android:layout_weight="1"
        android:src="@mipmap/play_64px"
        android:id="@+id/tomato_start"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="40dp"
        android:background="@android:color/transparent"/>

    <ImageButton
       android:layout_weight="1"
        android:src="@mipmap/cross_64px"
        android:id="@+id/tomato_stop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingBottom="40dp"
        android:background="@android:color/transparent"/>
</LinearLayout>