<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="match_parent"
     android:layout_gravity="start"
    android:id="@+id/left_drawer"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">
   <LinearLayout
       android:layout_weight="1"
       android:id="@+id/ll_menu"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_centerInParent="true"
       android:orientation="vertical"
       android:gravity="center"
       >
       
       <RelativeLayout 
           android:id="@+id/rl_settings"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/menuMarginBottom"
           android:onClick="onSetting">
           <ImageView
               android:id="@+id/settings"
               android:src="@mipmap/setting"
               android:layout_width="@dimen/menuIconHeight"
               android:layout_height="@dimen/menuIconHeight"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true" />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/settings"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"
               android:textSize="22sp"
               android:textColor="@color/menuTextColor"
               android:text="@string/settings"/>
       </RelativeLayout>
       <RelativeLayout 
           android:id="@+id/rl_timer"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/menuMarginBottom"
           android:onClick="onSetTime">
           <ImageView
               android:id="@+id/timer"
               android:src="@mipmap/clock"
               android:layout_width="@dimen/menuIconHeight"
               android:layout_height="@dimen/menuIconHeight"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true" />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/timer"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"
               android:textSize="22sp"
               android:textColor="@color/menuTextColor"
               android:text="@string/timer"/>
       </RelativeLayout>
       
       <RelativeLayout 
           android:id="@+id/rl_notify"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/menuMarginBottom"
           android:onClick="onNotify">
           <ImageView
               android:id="@+id/notify"
               android:src="@mipmap/bell"
               android:layout_width="@dimen/menuIconHeight"
               android:layout_height="@dimen/menuIconHeight"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true" />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/notify"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"
               android:textSize="22sp"
               android:textColor="@color/menuTextColor"
               android:text="@string/notify"/>
       </RelativeLayout>
        <RelativeLayout 
           android:id="@+id/rl_about"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/menuMarginBottom"
            android:onClick="onAbout">
           <ImageView
               android:id="@+id/about"
               android:src="@mipmap/about"
               android:layout_width="@dimen/menuIconHeight"
               android:layout_height="@dimen/menuIconHeight"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true" />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/about"
               android:layout_marginLeft="20dp"
               android:layout_centerVertical="true"
               android:textSize="22sp"
               android:textColor="@color/menuTextColor"
               android:text="@string/about"/>
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>
