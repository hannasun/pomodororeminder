                    android:layout_marginRight="@dimen/setReminderIconMarginRight"
                    android:layout_toRightOf="@+id/isPomodoro_icon"
                    android:onClick="onSwitchRepeat"
                    android:checked="true"
                    android:textOn="开启"
                    android:textOff="关闭"/>
            </RelativeLayout>-->
            <RelativeLayout
                android:id="@+id/rl_isRepeat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setReminderHeight"
                >
                <ImageView
                    android:id="@+id/isRepeat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/setReminderIconMarginLeft"
                    android:layout_marginRight="@dimen/setReminderIconMarginRight"
                    android:src="@mipmap/repeat32px"/>
                <TextView
                    android:layout_below="@+id/isRepeat_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setReminderTextMarginLeft"
                    android:layout_marginTop="@dimen/setReminderTextMarginTop"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:text="@string/isRepeat"/>
                <TextView
                    android:layout_toRightOf="@+id/isRepeat_icon"
                    android:id="@+id/set_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:layout_centerVertical="true"/>

                <Switch
                    android:id="@+id/repeat_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setReminderIconMarginLeft"
                    android:layout_marginRight="@dimen/setReminderIconMarginRight"
                    android:layout_toRightOf="@+id/set_repeat"
                    android:onClick="onSwitchRepeat"
                    android:checked="true"
                    android:textOn="重复"
                    android:textOff="从不"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_repeat_no"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setReminderHeight"
                android:onClick="setRepeatNo"
                android:clickable="true">
                <ImageView
                    android:id="@+id/repeat_no_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/setReminderIconMarginLeft"
                    android:layout_marginRight="@dimen/setReminderIconMarginRight"
                    android:src="@mipmap/repeattime32px"/>
                <TextView
                    android:layout_below="@+id/repeat_no_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setReminderTextMarginLeft"
                    android:layout_marginTop="@dimen/setReminderTextMarginTop"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:text="@string/repeatNo"/>
                <TextView
                    android:layout_toRightOf="@+id/repeat_no_icon"
                    android:id="@+id/set_repeat_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_repeat_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setReminderHeight"
                android:onClick="selectRepeatType"
                android:clickable="true">
                <ImageView
                    android:id="@+id/repeat_type_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/setReminderIconMarginLeft"
                    android:layout_marginRight="@dimen/setReminderIconMarginRight"
                    android:src="@mipmap/minus32px"/>

                <TextView
                    android:layout_below="@+id/repeat_type_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/setReminderTextMarginLeft"
                    android:layout_marginTop="@dimen/setReminderTextMarginTop"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:text="@string/repeatType"/>
                <TextView
                    android:layout_toRightOf="@+id/repeat_type_icon"
                    android:id="@+id/set_repeat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/setReminderTextSize"
                    android:textColor="@color/editReminderTitleColor"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>


        </LinearLayout>


    </ScrollView>
</RelativeLayout>